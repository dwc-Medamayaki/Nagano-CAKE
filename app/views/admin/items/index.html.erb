<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h2 class="d-inline-block">商品一覧</h1>
      <%= link_to "+", new_admin_item_path, class: 'btn rounded-circle shadow offset-9' %>
      <table class="table mt-4 border-bottom">
        <thead class="thead">
          <tr>
            <th style="width : 10%">商品ID</th>
            <th>商品名</th>
            <th style="width : 15%">税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id), class: 'text-reset', style: "text-decoration: underline" do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td></td>
              <td>
                <% if item.is_sale == true %>
                  <b class="text-success">販売中</b>
                <% else %>
                  <b class="text-black-50">販売停止中</b>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
