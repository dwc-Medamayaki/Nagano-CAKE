<h1>商品一覧</h1>
<%= link_to "+", new_admin_item_path, class: 'btn rounded-circle shadow' %>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre_id.name %></td>
        <td></td>
        <td>
          <% if item.is_sale == true %>
            <b class="text-success">販売中</b>
          <% else %>
            <b class="text-black-50">販売停止中</b>
          <% end %>
        </td>
      </tr>
    <% end %>
</table>

