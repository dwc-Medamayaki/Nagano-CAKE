<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h2>商品詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 mt-4">
      <div class="image">
        <%= image_tag @item.get_image, size: '300x200' %>
      </div>
    </div>
    <div class="col-md-5 mt-4">
      <div class="row">
        <label class="col-md-4">商品名</label>
        <div class="col-md-7 offset-md-1"><%= @item.name %></div>
        <label class="col-md-4">商品説明</label>
        <div class="col-md-7 offset-md-1"><%= @item.introduction %></div>
        <label class="col-md-4">ジャンル</label>
        <div class="col-md-7 offset-md-1"><%= @item.genre.name %></div>
        <label class="col-md-4">税込価格<br>(税抜価格)</label>
        <div class="col-md-7 offset-md-1 pt-2"><%= @item.price.to_s(:delimited) %>（<%= @item.tax_price.to_s(:delimited) %>）円</div>
        <label class="col-md-4">販売ステータス</label>
        <div class="col-md-7 offset-md-1">
          <% if @item.is_sale == true %>
            <b class="text-success">販売中</b>
          <% else %>
            <b class="text-black-50">販売停止中</b>
          <% end %>
        </div>
        <div class="mx-auto">
          <%= link_to "編集する", edit_admin_item_path, class:'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
</div>
