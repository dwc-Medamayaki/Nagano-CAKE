<h1>商品詳細</h1>
<div class="image">
  <%= image_tag @item.get_image, size: '80x100' %>
</div>
<div class="status">
  <label>商品名</label>
  <%= @item.name %>
  <lagel>商品説明</lagel>
  <%= @item.introduction %>
  <label>ジャンル</label>
  <%= @item.genre.name %>
  <label>税込価格<br>(税抜価格)</label>
  <%= @item.price.to_s(:delimited) %>（<%= @item.tax_price.to_s(:delimited) %>）円
  <label>販売ステータス</label>
  <% if @item.is_sale == true %>
    <b class="text-success">販売中</b>
  <% else %>
    <b class="text-black-50">販売停止中</b>
  <% end %>
</div>
<%= link_to "編集する", edit_admin_item_path, class:'btn btn-success' %>
