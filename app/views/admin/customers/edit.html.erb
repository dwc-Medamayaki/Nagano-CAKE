<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h2>会員情報編集</h2>
    </div>
    <div class="col-md-6 mt-4 mx-auto">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
        <form class="form-horizontal">
          <div class="form-group row">
            <p class="col-md-2 mt-1">会員ID</p>
            <div class="col-md-3"><%= @customer.id %></div>
          </div>

          <div class="form-group row">
            <p class="col-md-2 mt-1">氏名</p>
            <div class="col-md-3">
              <%= f.text_field :last_name, :size => '12', autofocus: true, required: true, autocomplete: "last_name" %>
            </div>
            <div class="col-md-4">
              <%= f.text_field :first_name, :size => '12', required: true, autocomplete: "first_name" %>
            </div>
          </div>

          <div class="form-group row">
            <p class="col-md-2">フリガナ</p>
            <div class="col-md-3">
              <%= f.text_field :last_name_kana, :size => '12', required: true, autocomplete: "last_name_kana" %>
            </div>
            <div class="col-md-4">
              <%= f.text_field :first_name_kana, :size => '12', required: true, autocomplete: "first_name_kana" %>
            </div>
          </div>

          <div class="form-group row">
            <p class="col-md-2">郵便番号</p>
            <div class="field col-md-9">
              <%= f.text_field :post_code, required: true, autocomplete: "post_code" %>
            </div>
          </div>

          <div class="form-group row">
            <p class="col-md-2">住所</p>
            <div class="field col-md-9">
              <%= f.text_field :address, :size=>"72", required: true, autocomplete: "address" %>
            </div>
          </div>

          <div class="form-group row">
            <p class="col-md-2">電話番号</p>
            <div class="field col-md-9">
              <%= f.text_field :telephone_number, required: true, autocomplete: "telephone_number" %>
            </div>
          </div>

          <div class="form-group row">
            <p class="col-md-2">メールアドレス</p>
            <div class="field col-md-9">
              <%= f.email_field :email, required: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="form-group row">
            <p class="col-md-2">会員ステータス</p>
            <div class="col-md-7 px-0">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>

              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="field col-md-5">
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            </div>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>

