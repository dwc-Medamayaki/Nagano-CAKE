<h1>会員一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td>
          <%= link_to(admin_customer_path(c)) do %>
            <%= c.name %>
          <% end %>
        </td>
        <td><%= c.email %></td>
        <td>
          <% if c.is_deleted == false %>
            <b class="text-success">有効</b>
          <% else %>
            <b class="text-black-50">退会</b>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
