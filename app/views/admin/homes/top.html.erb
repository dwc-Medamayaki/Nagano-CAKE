<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h2 class="d-inline-block">注文履歴一覧</h1>
      <table class="table mt-4 border-bottom">
        <thead class="thead">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th style="width : 15%">注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order), class: 'text-reset', style: "text-decoration: underline" do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
                <% end %>
              </td>
              <td><%= order.send_name %></td>
              <td><%= order.order_items.sum(:quantity) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
