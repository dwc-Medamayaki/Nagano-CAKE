<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
       <tr>
         <td><%= genre.name %></td>
         <% if admin_signed_in? %>
         <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
         <%end%>
       </tr>
    <%end%>  
  </tbody>
</table>