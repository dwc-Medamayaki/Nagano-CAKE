
<div class="container">
    <h2>ジャンル一覧・追加</h2>
    <div class="row">
        <%= form_with medel:@genre, local:true do |f| %>
         <table>
            <td>
              <div class="form-group">
                 <%= f.label :name, "ジャンル名" %>
              <%= f.text_field :name, clas: 'form-control' %>
              </div>
            </td>
            <td>
              <div class="form-group">
              <%= f.submit "新規登録", class: 'btn btn-success'%>
              </div>
            </td>
         </table>
        <%end%>
    </div>
    
    <div class="row">
        <div class="col-3">
            <table>
                <thead>
                    <tr>
                        <th>ジャンル</th>
                    </tr>
                </thead>
                <tbody>
                  <% @genres.each do |genre| %>
                    <tr>
                        <td><%= genre.name %></td>
                        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
                    </tr>
                  <%end%>  
                </tbody>
            </table>
        </div>
    </div>
</div>
