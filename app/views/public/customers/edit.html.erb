
<div class="container ml-5">

  <h2>会員情報編集</h2>

  <%= form_with model: @customer, url: edit_my_page_path do |f| %>

    <div class="row">
      <p class="col-md-2">氏名</p>
      <div class="col-md-1 text-right">
        <%= f.label :last_name, "(姓)" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name, autofocus: true, required: true, autocomplete: "last_name" %>
      </div>
      <div class="col-md-1 text-right">
        <%= f.label :first_name, "(名)" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name, required: true, autocomplete: "first_name" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-2">フリガナ</p>
      <div class="col-md-1 text-right">
        <%= f.label :last_name_kana, "(セイ)" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, required: true, autocomplete: "last_name_kana" %>
      </div>
      <div class="col-md-1 text-right">
        <%= f.label :first_name_kana, "(メイ)" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name_kana, required: true, autocomplete: "first_name_kana" %>
      </div>
    </div>
    
   <div class="row">
      <p class="col-md-3">郵便番号</p>
      <div class="field col-md-9">
        <%= f.number_field :post_code, required: true, autocomplete: "post_code" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-3">住所</p>
      <div class="field col-md-9">
        <%= f.text_field :address, :size=>"72", required: true, autocomplete: "address" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-3">メールアドレス</p>
      <div class="field col-md-9">
        <%= f.email_field :email, required: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="actions row">
      <div class="col-md-3"></div>
      <div class="field col-md-6">
        <%= f.submit "編集内容を保存", class: "text-light btn-success" %>
      </div>
      <div class="field col-md-3">
        <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  
  <% end %>