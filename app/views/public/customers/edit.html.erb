<div class="container ml-5">

  <h2>会員情報編集</h2>

  <%= form_with model: @customer, url: customers_information_path do |f| %>

    <div class="row">
      <p class="col-md-2">氏名</p>
      <div class="col-md-3">
        <%= f.text_field :last_name, autofocus: true, required: true, autocomplete: "last_name" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name, required: true, autocomplete: "first_name" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-2">フリガナ</p>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, required: true, autocomplete: "last_name_kana" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name_kana, required: true, autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-2">郵便番号</p>

      <div class="field col-md-9">
        <%= f.text_field :post_code, required: true, autocomplete: "post_code" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-2">住所</p>
      <div class="field col-md-9">
        <%= f.text_field :address, :size=>"72", required: true, autocomplete: "address" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-2">電話番号</p>
      <div class="field col-md-9">
        <%= f.text_field :telephone_number, required: true, autocomplete: "telephone_number" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-2">メールアドレス</p>
      <div class="field col-md-9">
        <%= f.email_field :email, required: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="actions row">
      <div class="col-md-2"></div>
      <div class="field col-md-5">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </div>
      <div class="col-md-3">
        <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
  
  <% end %>

</div>

