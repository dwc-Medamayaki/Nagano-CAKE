<div class="container">
    <h2>マイページ</h2>
    <div class="row">
        <div class="col-12">
   
      <div class="field col-md-5">
        <%= link_to "編集する", edit_my_page_path(@customer), class: "btn btn-success" %>
        </div>
      <table>
          <tr>
              <td>氏名</td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
           <tr>
              <td>フリガナ</td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
           <tr>
              <td>郵便番号</td>
              <td><%= @customer.post_code %></td>
          </tr>
           <tr>
              <td>住所</td>
              <td><%= @customer.address%></td>
          </tr>
           <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
          </tr>
           <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
          </tr>
     </table>
     
     <table>
         <tr>
             <td>配送先</td>
             <td><%= link_to "一覧を見る",  addresses_path(@customer), class:"btn btn-primary" %></td>
         </tr>
         <tr>
             <td>注文履歴</td>
             <td><%= link_to "一覧を見る",  orders_path(@customer), class:"btn btn-primary" %></td>
         </tr>
     </table>
        </div>
    </div>
</div>
