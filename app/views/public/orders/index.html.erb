<div class="container">
    <h2 class="col-6 mt-5 mx-auto">注文履歴一覧</h2>
    <div class="col-6 mt-3 mx-auto">
        <table class="table">
            <thead>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= l order.created_at, format: :short %></td>
                    <td>
                        〒<%= order.send_post_code %></br>
                         <%= order.send_address%></br>
                         <%= order.send_name %>
                    </td>
                    <td>
                        <% order.order_items.each do |order_item| %>
                         <%= order_item.item.name %>
                        <%end%>
                    </td>
                    <td><%= order.total_payment %></td>
                    <td><%= order.status %></td>
                    <td><%= link_to "表示する", order_path(order) %></td>
                </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>
