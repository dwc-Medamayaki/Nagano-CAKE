<div class="container ml-5">
  <h2>ログイン</h2>
  <h5>会員の方はこちらからログイン</h2>

  <%= form_with model: @customer, url: customer_session_path do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <p class="col-md-3">メールアドレス</p>
      <div class="field col-md-9">
        <%= f.email_field :email, :size=>"72", autofocus: true, required: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <p class="col-md-3">パスワード</p>
      <div class="field col-md-9">
        <%= f.password_field :password, :size=>"72", autocomplete: "current-password" %>
      </div>
    </div>

    <div class="actions row">
      <div class="col-md-3"></div>
      <div class="field col-md-9">
        <%= f.submit "ログイン", class: "text-light btn-primary" %>
      </div>
    </div>
  <% end %>

  <h5>会員登録がお済みでない方</h2>
  <div class="row">
    <u><%= link_to "こちら", new_customer_registration_path %></u>
    <span>から新規登録を行ってください。</span>
  </div>
</div>