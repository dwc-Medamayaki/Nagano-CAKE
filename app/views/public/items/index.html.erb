<div class="container mt-5">
  <div class="row">
    <div class="col-2">
      <%= render '/public/homes/genre_search.html',genres: @genres %>
    </div>

    <div class="col-10">
      <div class="d-flex">
        <% if @is_search == false %>
          <h2>商品一覧</h2><h4 class="mt-3">（全<%= @items.count %>件）</h4>
        <% else %>
          <h2><%= @search_word %>一覧</h2><h4 class="mt-3">（全<%= @items.count %>件）</h4>
        <% end %>
      </div>

      <div class="d-flex align-content-start flex-wrap">
        <% @items.each do |item| %>
          <div class="item col">
            <%= link_to(item_path(item)) do %>
              <%= image_tag item.get_image, size: '162x100' %>
            <% end %>
            <div class="item"><%= item.name %></div>
            <div class="item">¥<%= item.tax_price.to_s(:delimited) %></div>
          </div>
        <% end %>
      </div>

      <div class="col-12 mt-4">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>

