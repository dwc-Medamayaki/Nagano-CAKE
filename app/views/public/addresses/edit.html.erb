<div class="container">
    <h2>配送先編集</h2>
    <div class="row">
        <div class="col-12">
            <table>
               <tr>
                <td>
                    <div class="form-control">
                      <%= label :post_code,"郵便番号(ハイフンなし)" %>
                      <%= f.text_field :post_code, class:"form-control" %>
                    </div>
                </td>
            </tr>
            <tr>
              <td>
                    <div class="form-control">
                      <%= label :location,"住所" %>
                      <%= f.text_field :location, class:"form-control" %>
                    </div>
                </td>  
            </tr>
            <tr>
                <td>
                 <div class="form-control">
                   <%= label :name,"宛名" %>
                   <%= f.text_field :name, class:"form-control" %>
                 </div>
                </td> 
                <td>
                 <div class="form-group">
                   <%= f.submit "変更内容を保存", class: 'btn btn-success'%>
                 </div>
                </td>
            </tr>
            </table>
        </div>
    </div>
</div>